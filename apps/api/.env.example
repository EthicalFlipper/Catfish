# Catfish API Environment Variables
# Copy this file to .env and fill in values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# OpenAI (required for Whisper + GPT analysis)
OPENAI_API_KEY=sk-your-key-here

# Model Settings
WHISPER_MODEL=whisper-1
GPT_MODEL=gpt-4o-mini

# External Dependencies
# ffmpeg is required for audio analysis (audio format conversion)
# Install: brew install ffmpeg (Mac) / apt install ffmpeg (Linux) / choco install ffmpeg (Windows)
